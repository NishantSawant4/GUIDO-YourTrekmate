<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/iv_profilePic"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_button"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/et_newName"
        android:background="@drawable/rectangle"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:padding="16dp"
        android:hint="Name"
        android:inputType="text"
        android:textColorHint="@color/textcolor"
        android:gravity="start|center_vertical"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_profilePic"
        app:layout_constraintStart_toStartOf="@+id/iv_profilePic"
        app:layout_constraintTop_toBottomOf="@+id/iv_profilePic" />

    <Button
        android:id="@+id/bt_updated"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:text="Update Name"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/et_newName"
        app:layout_constraintStart_toStartOf="@+id/et_newName"
        app:layout_constraintTop_toBottomOf="@+id/et_newName" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/et_newEmail"
        android:background="@drawable/rectangle"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:padding="16dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/textcolor"
        android:gravity="start|center_vertical"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="@+id/bt_updated"
        app:layout_constraintStart_toStartOf="@+id/bt_updated"
        app:layout_constraintTop_toBottomOf="@+id/bt_updated" />

    <Button
        android:id="@+id/bt_updatedEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:text="Update Email"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/et_newEmail"
        app:layout_constraintStart_toStartOf="@+id/et_newEmail"
        app:layout_constraintTop_toBottomOf="@+id/et_newEmail"
         />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/et_newPassword"
        android:background="@drawable/rectangle"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:padding="16dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/textcolor"
        android:gravity="start|center_vertical"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="@+id/bt_updatedEmail"
        app:layout_constraintStart_toStartOf="@+id/bt_updatedEmail"
        app:layout_constraintTop_toBottomOf="@+id/bt_updatedEmail"
         />

    <Button
        android:id="@+id/bt_updatedPass"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:text="Update Password"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/et_newPassword"
        app:layout_constraintStart_toStartOf="@+id/et_newPassword"
        app:layout_constraintTop_toBottomOf="@+id/et_newPassword" />


</androidx.constraintlayout.widget.ConstraintLayout>